    </RelativeLayout>-->

    <RelativeLayout
        android:id="@+id/rla_chat_notification_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/new_msg_notification"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_size_l" />

        <Switch
            android:id="@+id/switcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_clear_chat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:text="@string/new_msg_clear"
        android:textColor="@color/text_black"
        android:textSize="@dimen/font_size_l" />
    <Button
        android:id="@+id/btn_dissolve_group"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/quit_red_selector"
        android:text="@string/dissovle_group"
        android:textColor="@color/white" />

</LinearLayout>