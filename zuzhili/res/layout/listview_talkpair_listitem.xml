<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/talkpairitem"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="@drawable/submenu_item_selector"
    android:descendantFocusability="blocksDescendants"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" >

        <ImageView
            android:contentDescription="@null"
            android:id="@+id/talkpairitem_head"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_marginLeft="14dp"
            android:layout_gravity="center_vertical" />

        <Button
            android:id="@+id/talkpairitem_toast_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:background="@drawable/talkpair_toast"
            android:focusable="false"
            android:textColor="@color/white"
            android:textSize="8sp"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/talkpairitem_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/more_item_text"
                android:paddingTop="5dp"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/talkpairitem_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_grey"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:baselineAligned="false"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal" >

            <ImageView
                android:contentDescription="@null"
                android:id="@+id/talkpairitem_iconflag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/talkpairitem_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/text_black"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>