<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="62.5dp"
    android:clickable="true"
    android:id="@+id/rla_header_container"
    android:background="@drawable/submenu_item_selector">
    
    <ImageView
        android:id="@+id/img_user_head"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="7.5dp"
        android:contentDescription="@null"
        android:src="@drawable/icon_head" />

    <TextView
        android:id="@+id/txt_user_name"
        style="@style/weibo_text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingRight="10dp"
        android:layout_centerInParent="true"
        android:drawableRight="@drawable/more_icon_rightback"
        android:layout_toRightOf="@+id/img_user_head" />

</RelativeLayout>