<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <FrameLayout
        android:id="@+id/fla_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_top_indi"
            android:layout_width="32dp"
            android:layout_height="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:background="@drawable/icon_top_indicator"/>

        <TextView
            android:id="@+id/txt_trend_title"
            style="@style/trendTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </FrameLayout>

    <FrameLayout
        android:layout_below="@+id/fla_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_top_indi2"
            android:layout_width="32dp"
            android:layout_height="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:background="@drawable/icon_top_indicator"/>

        <TextView
            android:id="@+id/txt_trend_content"
            style="@style/trendContentStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </FrameLayout>

    <!-- 动态的发布位置 -->
    <TextView
        android:id="@+id/txt_trend_publish_position"
        style="@style/quotedTrendPublishPostion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />

</RelativeLayout>