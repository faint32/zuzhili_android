<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/submenu_item_selector">

    <com.zuzhili.ui.views.MyImageView
        android:id="@+id/img_gallery_avatar"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/txt_gallery_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:maxWidth="160dp"
        android:textColor="@color/text_black"
        android:textSize="@dimen/font_size_m"
        android:layout_toRightOf="@+id/img_gallery_avatar"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/txt_pic_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_grey"
        android:textSize="@dimen/font_size_s"
        android:layout_below="@+id/txt_gallery_name"
        android:layout_toRightOf="@+id/img_gallery_avatar"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/img_gallery_choose"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/album_select"
        android:layout_marginRight="10dp"
        android:visibility="gone"/>

</RelativeLayout>