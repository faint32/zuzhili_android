<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sociallistitem"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:background="@drawable/social_item_selector"
    android:orientation="horizontal"
    android:paddingLeft="10dp" >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/img_social_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/default_social_logo" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_social_listitem_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/zuzhili_blue"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_social_listitem_domain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:textColor="@color/black_gray"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_social_unreadcounthint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:focusable="false"
        android:clickable="false"
        android:layout_marginRight="10dp"
        android:textColor="@color/white"
        android:visibility="invisible" />

</LinearLayout>