<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal" >

    <ImageView
        android:layout_marginLeft="10.0dip"
        android:id="@+id/vedio_thumbnail_iv"
        android:layout_width="85.0dip"
        android:layout_height="60.0dip"
        android:scaleType="centerCrop"
         />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5.0dip"
        android:paddingTop="5.0dip" >

        <TextView
            android:id="@+id/vedio_name_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#2d2a2a"
            android:lines="1"
            android:ellipsize="middle"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_below="@id/vedio_name_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal"
             >

            <TextView
                android:id="@+id/vedio_duration_tv"
                android:gravity="center_vertical"
                android:layout_width="90.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#898989"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vedio_size_tv"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#898989"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>