<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_album_name"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#00000000"
            android:hint="@string/publish_photoalbum_name"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/line_one"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/select_title"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#dedede"/>

        <EditText
            android:id="@+id/edit_album_desc"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/line_one"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="top|left"
            android:hint="@string/publish_photoalbum_describe"
            android:textSize="16sp"/>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/layout_available_container"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent">

        <CheckBox
            android:id="@+id/cbx_available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:text="@string/publish_priority_hint"
            android:button="@drawable/just_available_for_member_selector"
            android:textColor="#415d73"/>

        <TextView
            android:id="@+id/line_two"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/publish_write_divider_color"/>

    </RelativeLayout>

</RelativeLayout>