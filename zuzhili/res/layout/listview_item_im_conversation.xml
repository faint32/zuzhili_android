<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/submenu_item_selector">

    <ImageView
        android:id="@+id/img_group_avatar"
        android:layout_centerVertical="true"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/txt_count_in_group"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:visibility="visible"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/txt_badge_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-8dp"
        android:layout_marginTop="-8dp"
        android:layout_alignTop="@+id/img_group_avatar"
        android:layout_alignRight="@+id/img_group_avatar"/>

    <TextView
        android:id="@+id/txt_contact_onename"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:maxWidth="160dp"
        android:visibility="gone"
        android:textColor="@color/text_black"
        android:layout_alignTop="@+id/img_group_avatar"
        android:textSize="@dimen/font_size_m"
        android:layout_toRightOf="@+id/img_group_avatar"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/txt_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:maxWidth="160dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/text_black"
        android:layout_alignTop="@+id/img_group_avatar"
        android:textSize="@dimen/font_size_m"
        android:layout_toRightOf="@+id/img_group_avatar"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/txt_last_talk_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_group_avatar"
        android:textColor="@color/light_grey"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/txt_lastest_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:layout_alignBottom="@+id/img_group_avatar"
        android:layout_marginBottom="3dp"
        android:textColor="@color/light_grey"
        android:layout_toRightOf="@+id/img_group_avatar"
        android:layout_toLeftOf="@+id/txt_last_talk_time"
        android:layout_marginLeft="10dp"/>

</RelativeLayout>