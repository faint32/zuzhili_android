<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zuzhili="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <com.zuzhili.ui.views.BezelImageView
        android:id="@+id/bar_user_avator"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15.33dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        zuzhili:maskDrawable="@drawable/circle_mask"
        zuzhili:borderDrawable="@drawable/circle_border"
        android:src="@drawable/default_user_head_small"/>

    <TextView
        android:id="@+id/bar_user_name"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/menu_name_padding"
        android:textSize="@dimen/font_size_m"
        android:textColor="@color/white"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/bar_user_position"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/bar_user_avator"
        android:textSize="@dimen/font_size_m"
        android:textColor="@color/white"
        android:visibility="gone"/>

</RelativeLayout>