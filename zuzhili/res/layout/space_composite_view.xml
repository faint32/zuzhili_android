<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/realRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="66dp"
        android:layout_height="66dp">

        <ImageView
            android:id="@+id/space_menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:duplicateParentState="true"
            android:focusable="false"
            android:padding="18dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/space_menu_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:duplicateParentState="true"
                android:focusable="false"
                android:gravity="center_vertical"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/space_menu_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:duplicateParentState="true"
                android:focusable="false"
                android:gravity="center_vertical"
                android:textSize="12sp"/>

            <ImageView
                android:id="@+id/space_menu_arrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:duplicateParentState="true"
                android:focusable="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/arrow_indicator"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dadddf"/>

    </LinearLayout>

</LinearLayout>