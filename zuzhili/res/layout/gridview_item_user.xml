<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_user_avatar"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/defaulthead"/>

    <ImageView
        android:id="@+id/img_left_top_remove_user_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/img_user_avatar"
        android:layout_alignLeft="@+id/img_user_avatar"
        android:visibility="gone"
        android:background="@drawable/im_left_top_remove_user"/>


    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/img_user_avatar"
        android:layout_centerHorizontal="true"
        android:textColor="@color/light_grey"
        android:maxWidth="40dip"
        android:maxLines="1"
        android:maxEms="3"
        android:singleLine="true"
        android:ellipsize = "end"
        android:textSize="@dimen/font_size_m"/>

</RelativeLayout>